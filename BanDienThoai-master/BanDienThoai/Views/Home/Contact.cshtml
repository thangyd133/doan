﻿@model BanDienThoai.Models.ViewModel.ContactViewModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style>
        .validation {
            color: red;
        }
    </style>
}

<!--start-breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="~/Home/Index">Trang chủ</a></li>
                <li class="active">Liên Hệ</li>
            </ol>
        </div>
    </div>
</div>
<!--end-breadcrumbs-->
<!--contact-start-->
<div class="contact">
    <div class="container">
        <div class="contact-top heading">
            <h2>LIÊN HỆ</h2>
        </div>
        <div class="contact-text">
            <div class="col-md-3 contact-left">
                <div class="address">
                    <h5>Địa chỉ</h5>
                    <p>
                        Tên công ty,
                        <span>Thắng Smart</span>
                        Cầu Giấy,Hà Nội.
                    </p>
                </div>
                <div class="address">
                    <h5>Địa chỉ</h5>
                    <p>
                        SĐT:0354505568,
                        <span>Fax:999-999-999</span>
                        Email: <a href="mailto:example@email.com">Hoangthang@gmail.com</a>
                    </p>
                </div>
            </div>
            <div class="col-md-9 contact-right">
                <form action="Contact" method="post">
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "validation" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation" })
                    <br />
                    @Html.TextBoxFor(m => m.Name, new { placeholder = "Tên", required = "" })
                    @Html.TextBoxFor(m => m.Phone, new { placeholder = "Số điện thoại", required = "" })
                    <br /><br />
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", required = "" })
                    @Html.ValidationMessageFor(m => m.Content)
                    @Html.TextAreaFor(m => m.Content, new { placeholder = "Ghi chú", required = "" })
                    <div class="submit-btn">
                        <input type="submit" value="Gửi">
                    </div>
                </form>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!--contact-end-->
